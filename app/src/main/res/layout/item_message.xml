<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MessageActivity"
    tools:showIn="@layout/activity_message">

    <RelativeLayout
        android:id="@+id/message_relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/background_color"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/message_image1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/member_talk" />

        <TextView
            android:id="@+id/message_name1"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/message_image1"
            android:background="@color/background_color"
            android:text="張三"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/message_text1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/message_name1"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/message_image1"
            android:paddingStart="8dp"
            android:paddingTop="14dp"
            android:text="高科大E廣面交喔"
            android:textColor="?attr/colorControlNormal"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/message_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_name1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:paddingStart="8dp"
            android:paddingTop="14dp"
            android:text="下午 5：20"
            android:textColor="?attr/colorControlNormal"
            android:textSize="16dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>